{{template "base" .}}

{{define "content" }}
<div class="container">
	<div class="row">
		<div class="col">
			<h1 class="mt-5">Test microservices</h1>
			<hr />
			<a
				id="brokerBtn"
				class="btn btn-primary btn-lg mt-3"
				href="javascript:void(0);"
				>Test Broker</a
			>
			<a
				id="authBtn"
				class="btn btn-secondary btn-lg mt-3"
				href="javascript:void(0);"
				>Test Auth</a
			>
			<a id="logBtn" class="btn btn-info btn-lg mt-3" href="javascript:void(0);"
				>Test Log</a
			>

			<div
				id="output"
				class="mt-5"
				style="outline: 1px solid silver; padding: 2em"
			>
				<span class="text-muted">Output shows here...</span>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col">
			<h4 class="mt-5">Sent</h4>
			<div class="mt-1" style="outline: 1px solid silver; padding: 2em">
				<pre
					id="payload"
				><span class="text-muted">Nothing sent yet...</span></pre>
			</div>
		</div>
		<div class="col">
			<h4 class="mt-5">Received</h4>
			<div class="mt-1" style="outline: 1px solid silver; padding: 2em">
				<pre
					id="received"
				><span class="text-muted">Nothing received yet...</span></pre>
			</div>
		</div>
	</div>
</div>
{{ end }}

{{define "js"}}
<script>
	let brokerBtn = document.getElementById("brokerBtn");
	let authBtn = document.getElementById("authBtn");
	let logBtn = document.getElementById("logBtn");

	let output = document.getElementById("output");
	let sent = document.getElementById("payload");
	let received = document.getElementById("received");

	brokerBtn.addEventListener("click", async function () {
		const body = {
			method: "POST",
		};

		fetch("http:\/\/localhost:8080", body)
			.then(async (res) => {
				const data = await res.json();

				sent.innerText = JSON.stringify(body, null, 2);
				received.innerText = JSON.stringify(data, null, 2);

				output.innerHTML = `<div class="alert alert-success" role="alert">
                Successfully sent message to broker!
            </div>`;
			})
			.catch((err) => {
				output.innerHTML = `<div class="alert alert-danger" role="alert">
                Error: ${err.message}
            </div>`;
			});
	});

	authBtn.addEventListener("click", async function () {
		const payload = {
			action: "auth",
			auth: {
				email: "admin@example.com",
				password: "verysecret",
			},
		};

		const headers = new Headers();
		headers.append("Content-Type", "application/json");

		const body = {
			method: "POST",
			body: JSON.stringify(payload),
			headers: headers,
		};

		fetch("http:\/\/localhost:8080/handle", body)
			.then(async (res) => {
				const data = await res.json();

				sent.innerText = JSON.stringify(payload, null, 4);
				received.innerText = JSON.stringify(data, null, 4);

				output.innerHTML = `<div class="alert alert-success" role="alert">
                Successfully sent message to auth!
            </div>`;
			})
			.catch((err) => {
				output.innerHTML = `<div class="alert alert-danger" role="alert">
                Error: ${err.message}
            </div>`;
			});
	});

	logBtn.addEventListener("click", async function () {
		const payload = {
			action: "log",
			log: {
				name: "test-log",
				data: "This is a test log entry",
			},
		};

		const headers = new Headers();
		headers.append("Content-Type", "application/json");

		const body = {
			method: "POST",
			body: JSON.stringify(payload),
			headers: headers,
		};

		fetch("http:\/\/localhost:8080/handle", body)
			.then(async (res) => {
				const data = await res.json();

				sent.innerText = JSON.stringify(payload, null, 4);
				received.innerText = JSON.stringify(data, null, 4);

				output.innerHTML = `<div class="alert alert-success" role="alert">
                Successfully sent log to broker!
            </div>`;
			})
			.catch((err) => {
				output.innerHTML = `<div class="alert alert-danger" role="alert">
                Error: ${err.message}
            </div>`;
			});
	});
</script>
{{ end }}
